@model AVG.Contracts.ProjectDataResponse
@{
    ViewData["Title"] = @Model.Title;
}

<div class="container">
    <h1>@Model.Title</h1>
    <div class="project-image">
        <img src="@Model.ImagePath" alt="Project Screenshot">
    </div>
    <p>
        @Html.Raw(Model.Description)
    </p>
    <h2>Пример исполнения класса:</h2>
    <pre>
        @Model.ExampleScript
    </pre>
    <div style="text-align: center; margin: 20px 0;">
        <!-- Контейнер для центрирования -->
        <a href="@Model.Link" target="_blank" class="btn btn-primary">Перейти на GitHub</a>
    </div>
</div>

